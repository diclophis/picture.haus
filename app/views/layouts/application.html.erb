<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= request.host %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"/>

    <%= render :partial => "shared/shaders" %>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="header">
      <h1>
        <%= link_to(request.host, root_path) %>
        <% if content_for? :tagline %>
          ~ <%= yield :tagline %>
        <% end %>
      </h1>
    </div>
    <div id="sidebar">
      <%= yield :sidebar %>
    </div>
    <div id="content">
      <% if notice %>
        <div id="flash">
          <div class="notice"><p><%= notice %></p></div>
        </div>
      <% end %>
      <% if alert %>
        <div id="flash">
          <div class="alert"><h2><%= alert %></h2></div>
        </div>
      <% end %>
      <%= yield %>
    </div>
    <div id="risingcode-grid"><canvas id="risingcode-canvas"></canvas></div>
  </body>
</html>
