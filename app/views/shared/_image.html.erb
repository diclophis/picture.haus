<div class="image">
  <p>
    <%=link_to(h(truncate(image.title)), image_path(image.id))%>
    <br/>
    <%=truncate(File.basename(image.src))%>
    <br/>
    found <%=time_ago_in_words(image.latest_finding.created_at)%> ago
    <% if image.findings.count > 1 then %>
      by <%=image.findings.count%> other people
    <% end %>
  </p>

  <div class="container">
    <div class="primary-container">
      <a href="<%=image_path(image.id)%>">
        <%=image_tag(asset_url((image.public_url)))%>
      </a>
    </div>
    <div class="secondary-container">
      <% image.similar_images.limit(max_similar_images).each { |similar_image| %>
        <div class="right-image">
          <a href="<%=image_path(similar_image.id)%>">
            <%=image_tag(asset_url((similar_image.public_url)))%>
          </a>
        </div>
      <% } %>
    </div>
  </div>


</div>
