<li class="image">
  <div class="imagewrapper">
    <div class="primary">
      <ul>
        <li>
          <p>
            <%=link_to(h((image.title)), image.src)%>
            <br/>
            <%=(image.src)%>
            <br/>
            found <%=time_ago_in_words(image.latest_finding.created_at)%> ago
            <% if image.findings.count > 1 then %>
              by <%=image.findings.count%> other people
            <% end %>
          </p>
        </li>
        <li>
          <%=link_to(image_tag(image.src, {:width => 365}), (image.src))%>
        </li>
      </ul>
    </div>
  </div>
</li>
